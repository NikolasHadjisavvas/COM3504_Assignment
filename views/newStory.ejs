<body>
<header>
    <%- include('./navbar.ejs') %>
</header>
<main>
    <div id="initial_form" style="display: block">
    <h1>Create a story</h1>
    <form id = "xForm" onsubmit="onSubmit('/newStory')">
        <p><label for="authorName"> Your name </label>
            <input type="text" id="authorName" name="authorName">
        </p>
        <p><label for="authorTitle"> Title: </label>
            <input type="text" id="authorTitle" name="authorTitle">
        </p>
        <p><label for="authorDescription"> Story Description: </label>
            <input type="text" id="authorDescription" name="authorDescription">
        </p>
        <p><label for="image_url"> Image URL: </label>
            <input type="text" id="image_url" name="image_url">
        </p>
        <p><input type="submit" onclick="storeStoryINIdb()" name="g" value="Submit" id="g"></p>

    </form>
    </div>

    </main>
</body>
</html>
